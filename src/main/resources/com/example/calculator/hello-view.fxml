<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.calculator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" spacing="10.0" HBox.Hgrow="ALWAYS">
        <TextField fx:id="first" prefHeight="30.0" prefWidth="150.0" />
        <TextField fx:id="second" prefHeight="30.0" prefWidth="150.0" />
    </HBox>
    <HBox alignment="CENTER" spacing="10.0" HBox.Hgrow="ALWAYS">
        <Button fx:id="sup1" onAction="#onButtonClick" prefHeight="30.0" prefWidth="50.0" text="+" />
        <Button fx:id="sup2" onAction="#onButtonClick" prefHeight="30.0" prefWidth="50.0" text="-" />
        <Button fx:id="sup3" onAction="#onButtonClick" prefHeight="30.0" prefWidth="50.0" text="*" />
        <Button fx:id="sup4" onAction="#onButtonClick" prefHeight="30.0" prefWidth="50.0" text="/" />
        <Button fx:id="sup5" onAction="#onButtonClick" prefHeight="30.0" prefWidth="50.0" text="\%" />
    </HBox>
    <Label fx:id="bytext" text="">
      <font>
         <Font size="24.0" />
      </font></Label>
</VBox>
